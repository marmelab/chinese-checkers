<form id="game-board" method="POST" action="{{ path("move") }}">
	<table class="game-board">
		<tbody>

		<tr>
			<th></th>
			{# Show the header of each column #}
			{% for columnIndex in board[0]|keys %}
				<th>{{ columnIndex + 1 }}</th>
			{% endfor %}
		</tr>

		{# Render the game board content #}
		{% for rowIndex, row in board %}
			<tr>
				{# Show the header of each row #}
				<th>{{ getRowName(rowIndex) }}</th>

				{% for columnIndex, cell in row %}
					<twig:Cell cell="{{ cell }}" rowIndex="{{ rowIndex }}" columnIndex="{{ columnIndex }}" winner="{{ winner }}" currentPlayer="{{ currentPlayer }}" />
				{% endfor %}
			</tr>
		{% endfor %}

		</tbody>
	</table>
</form>
